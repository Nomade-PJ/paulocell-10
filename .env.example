# Configuração de ambiente de produção
NODE_ENV=production

# Configuração do MongoDB (legado)
DB_URI=mongodb://usuario:senha@hostname:27017/dbname
DB_NAME=paulocell
DB_TYPE=mongoose

# URL da API
REACT_APP_API_URL=http://seu-dominio.com/api
API_URL=http://seu-dominio.com/api
SITE_APP_URL=http://seu-dominio.com

# Segurança
JWT_SECRET=chave_jwt_segura_aqui
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=chave_refresh_token_aqui
REFRESH_TOKEN_EXPIRES_IN=30d

# Configuração do servidor
PORT=3000
HOST=0.0.0.0

# Configuração de CORS
CORS_ORIGIN=http://seu-dominio.com,https://seu-dominio.com

# Upload de arquivos
UPLOAD_DIR=/var/www/uploads
MAX_FILE_SIZE=10485760 # 10MB 

# Configuração do Supabase
SUPABASE_URL=http://seu-ip-supabase:8000
SUPABASE_ANON_KEY=sua-chave-anon-supabase
SUPABASE_SERVICE_ROLE_KEY=sua-chave-service-role-supabase

# Flag para habilitar Supabase (quando true, usa Supabase em vez de MongoDB)
USE_SUPABASE=false 